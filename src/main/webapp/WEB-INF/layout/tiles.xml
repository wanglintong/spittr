<tiles-definitions>
	<!--定义/layout/ mainLayout.jsp的组成名称为bugbase.mainLayout -->
	<definition name="base" template="/WEB-INF/layout/page.jsp">
		<put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
	</definition>
	
	<definition name="unauthorized" extends="base">
		<put-attribute name="body" value="/WEB-INF/views/unauthorized.jsp" />
	</definition>
	
	<definition name="login" extends="base">
		<put-attribute name="body" value="/WEB-INF/views/login.jsp" />
	</definition>
	
	<definition name="home" extends="base">
		<put-attribute name="body" value="/WEB-INF/views/home.jsp" />
	</definition>
	
	<definition name="registForm" extends="base">
		<put-attribute name="body" value="/WEB-INF/views/registForm.jsp" />
	</definition>
	
	<definition name="profile" extends="base">
		<put-attribute name="body" value="/WEB-INF/views/profile.jsp" />
	</definition>
	
	<definition name="spittles" extends="base">
		<put-attribute name="body" value="/WEB-INF/views/spittles.jsp" />
	</definition>
	
	<definition name="error/errorTemplate" extends="base">
		<put-attribute name="body" value="/WEB-INF/views/error/errorTemplate.jsp" />
	</definition>
</tiles-definitions>